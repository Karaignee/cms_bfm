.row
  .col-md-12
    .page-header
      %h1 Pre Registrations
.row
  .col-md-12
    =will_paginate @pre_registrations, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %tr
        %th Email
        %th Ip address
        %th Source
        %th Created
        %th User agent
        %th
      -@pre_registrations.each do |pre_registration|
        %tr
          %td=pre_registration.email
          %td=pre_registration.ip_address
          %td=pre_registration.source
          %td=pre_registration.created_at.to_s(:standard)
          %td=pre_registration.user_agent
          %td
            =link_to 'Edit', edit_pre_registration_url(pre_registration)
            -if pre_registration.destroyable?
              =link_to 'Delete', pre_registration, method: :delete, data: { confirm: 'Are you sure?' }
.row
  .col-md-12
    =link_to 'New', new_pre_registration_url, class: 'btn btn-success'