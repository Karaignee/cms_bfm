.row
  .col-md-12
    .page-header
      %h1 Admin Page
      %p.lead This is the landing page for system admins

      .btn-group
        .btn-group
          %button.btn.btn-default.dropdown-toggle{type: 'button', data: {toggle: 'dropdown'}}
            Manage Bourbon Media and Content
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            %li
              =link_to 'Media Uploads', media_uploads_url
            %li
              =link_to 'Profile Questions', profile_questions_url
            %li
              =link_to 'Question Categories', profile_question_categories_url
            %li
              =link_to 'User Invitations', user_invites_url
          .btn-group
            %button.btn.btn-default.dropdown-toggle{type: 'button', data: {toggle: 'dropdown'}}
              Manage Bourbon Users
              %span.caret
            %ul.dropdown-menu{role: 'menu'}
              %li
                =link_to 'Users', users_url
              %li
                =link_to 'User groups', user_groups_url
              %li
                =link_to 'Countries', countries_url



.row
  .col-sm-12
    %p
      Landing page for:
      =link_to 'Anonymous users', welcome_landing_url(force: 'yes'), class: 'btn btn-info btn-sm'
      =link_to 'Standard users', welcome_normal_user_url, class: 'btn btn-info btn-sm'
      =link_to 'Contributors', welcome_contributor_url, class: 'btn btn-info btn-sm'
      =link_to 'Curators', welcome_curator_url, class: 'btn btn-info btn-sm'
      =link_to 'Admins', welcome_admin_url, class: 'btn btn-info btn-sm'
.row
  .col-md-2
    .well.well-sm.text-center
      %h2=@user_all
      %p=link_to('users registered', users_url)
  .col-md-2
    .well.well-sm.text-center
      %h2=@media_uploads_all
      %p=link_to('media uploads', media_uploads_url)
  .col-md-2
    .well.well-sm.text-center
      %h2=@bourbon_articles_all
      %p=link_to('articles', stories_url)
