.row
  .col-md-12
    .page-header
      %h1 Genres
.row
  .col-md-12
    %table.table.table-striped.table-bordered
      %tr
        %th Name
        %th
      -@genres.each do |genre|
        %tr
          %td=genre.name
          %td
            =link_to 'View', genre
            =link_to 'Edit', edit_genre_url(genre)
            -if genre.destroyable?
              =link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' }
.row
  .col-md-12
    =link_to 'New', new_genre_url, class: 'btn btn-success'