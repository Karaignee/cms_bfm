-# This will only work if you send in a local variable called "owned_thing"
.row
  .col-md-12
    .hidden-xs
      =image_tag owned_thing.user.avatar_url
    %p.text-muted
      -if owned_thing.created_at
        -if owned_thing.user_id == current_user.id
          You contributed this on
          =owned_thing.created_at.to_s(:standard)
        -else
          =link_to owned_thing.user.full_name, user_url(owned_thing.user.url_code), target: '_blank'
          at
          =owned_thing.created_at.to_s(:standard)
      -else
        =owned_thing.user.full_name