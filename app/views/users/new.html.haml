.row
  .col-md-12
    .page-header
      %h1 Sign up
= render 'form'

.row
  .col-md-8.col-md-offset-2
    .row
      .col-md-8.col-md-offset-4
        =link_to 'Sign up using your Facebook ID', '/auth/facebook', id: 'fb_sign_in', class: 'btn btn-primary', target: '_top'

.row
  .col-md-12
    %p
      -if current_user && current_user.admin?
        =link_to 'Back', users_path
      -else
        =link_to 'Back', root_url
