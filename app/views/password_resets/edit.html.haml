.row
  .col-sm-12
    .page-header
      %h1 Reset your password
.row
  .col-sm-6.col-sm-offset-3
    .well.well-sm
      =form_tag(password_reset_path, method: :put, html: {class: 'form', role: 'form'}) do
        .form-group
          =hidden_field_tag :id, @token
          =label_tag :password, 'Enter your new password:'
          =password_field_tag :password, nil, placeholder: '******', autofocus: true, class: 'form-control'
        .form-group
          =label_tag :password_confirmation, 'Re-enter it:'
          =password_field_tag :password_confirmation, nil, placeholder: '******', class: 'form-control'
        .form-group
          =submit_tag 'Reset Now', class: 'btn btn-success'