.row
  .col-md-8.col-md-offset-2
    =form_for(@gear_category, html: {class: 'form-horizontal', role: 'form'}) do |f|
      .well.well-sm
        =render partial: '/layouts/error_messages', locals: {thing: @gear_category, message: nil}
        .form-group
          =f.label :name, class: 'control-label col-md-4'
          .col-md-8
            =f.text_field :name, class: 'form-control'
        .form-group
          =f.label :description, class: 'control-label col-md-4'
          .col-md-8
            =f.text_field :description, class: 'form-control'
      =f.submit 'Save', class: 'btn btn-success'
      or
      =link_to 'cancel', gear_categories_path
