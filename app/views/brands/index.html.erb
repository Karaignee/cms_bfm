<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Brands</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      <% @brands.each do |brand| %>
        <tr>
          <td>
            <%= brand.name %>
          </td>
          <td>
            <%= link_to 'View', brand %>
            <%= link_to 'Edit', edit_brand_url(brand) %>
            <% if brand.destroyable? %>
              <%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="row" style="color:#000;">
  <div class="col-md-12">
    <%= link_to 'New', new_brand_url, class: 'btn btn-success' %>
  </div>
</div>
